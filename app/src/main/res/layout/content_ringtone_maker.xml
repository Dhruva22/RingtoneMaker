<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ringtone_maker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ringtonemaker.activity.RingtoneMakerActivity"
    tools:showIn="@layout/activity_ringtone_maker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xxlarge">

            <com.example.ringtonemaker.custom.CustomTextView
                android:id="@+id/tvSelectPrefixLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/prefix_label"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_large"
                app:custom_font="mv_boli_v1" />

            <Spinner
                android:id="@+id/spPrefix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_xx1largest"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium_large"></Spinner>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/spPrefix"
                android:layout_marginLeft="@dimen/margin_xxx1largest"
                android:layout_marginRight="@dimen/margin_medium_small"
                android:background="@android:color/black" />

        </RelativeLayout>

        <com.example.ringtonemaker.custom.CustomTextView
            android:id="@+id/tvEnterNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:text="@string/enter_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            app:custom_font="mv_boli_v1" />

        <com.example.ringtonemaker.custom.CustomEditText
            android:id="@+id/etEnterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xlargest"
            android:layout_marginRight="@dimen/margin_xlargest"
            android:backgroundTint="@android:color/black"
            android:hint="Type your text here"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            app:custom_font="mv_boli_v1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.ringtonemaker.custom.CustomTextView
                android:id="@+id/tvSelectPostfixLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:gravity="center_vertical"
                android:text="@string/postfix_label"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_large"
                app:custom_font="mv_boli_v1" />

            <Spinner
                android:id="@+id/spPostfix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_xx2largest"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium_large">

            </Spinner>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/spPostfix"
                android:layout_marginLeft="@dimen/margin_xxx1largest"
                android:layout_marginRight="@dimen/margin_medium_small"
                android:background="@android:color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_large">

            <com.example.ringtonemaker.custom.CustomTextView
                android:id="@+id/tvLanguageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/language_label"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_large"
                app:custom_font="mv_boli_v1" />

            <Spinner
                android:id="@+id/spLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_xxx1largest"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium_large">

            </Spinner>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/spLanguage"
                android:layout_marginLeft="@dimen/margin_xxx1largest"
                android:layout_marginRight="@dimen/margin_medium_small"
                android:background="@android:color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium">

            <com.example.ringtonemaker.custom.CustomTextView
                android:id="@+id/tvVolumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/volume_label"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_large"
                app:custom_font="mv_boli_v1" />

            <com.example.ringtonemaker.custom.CustomTextView
                android:id="@+id/tvVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_xlarge"
                android:layout_marginTop="@dimen/margin_large"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium_large"
                app:custom_font="mv_boli_v1" />

        </RelativeLayout>

        <SeekBar
            android:id="@+id/sbVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_large"
            android:layout_marginRight="@dimen/margin_medium_large"
            android:layout_marginTop="@dimen/margin_small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_large">

            <com.example.ringtonemaker.custom.CustomButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/margin_xxxxlarge"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@drawable/button_background_maker"
                android:enabled="false"
                android:text="@string/btnsave"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                app:custom_font="mv_boli_v1" />

            <ImageButton
                android:id="@+id/btnPlay"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_large"
                android:paddingRight="@dimen/padding_large"
                android:src="@drawable/play" />

            <com.example.ringtonemaker.custom.CustomButton
                android:id="@+id/btnSetAs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_xxxxlarge"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@drawable/button_background_maker"
                android:enabled="false"
                android:text="@string/btn_set_as"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                app:custom_font="mv_boli_v1" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlAds"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_gravity="bottom"

            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_id" />

    </RelativeLayout>
</RelativeLayout>
