<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomFont">
        <attr name="font_style">
            <flag name="regular" value="1" />
            <flag name="semibold" value="2" />
            <flag name="bold" value="4" />
            <flag name="italic" value="8" />
            <flag name="light" value="16" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ChipView">
        <attr name="chip_spacing" format="dimension" />
        <attr name="chip_line_spacing" format="dimension" />
        <attr name="chip_padding" format="dimension" />
        <attr name="chip_side_padding" format="dimension" />
        <attr name="chip_corner_radius" format="dimension" />
        <attr name="chip_background" format="reference" />
        <attr name="chip_background_selected" format="reference" />
        <attr name="chip_background_res" format="reference" />
    </declare-styleable>
    <declare-styleable name="SpoilerTextView">
        <attr name="trimLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="custom_font" />
        <attr name="line_spacing" format="dimension" />
        <attr name="letter_spacing" format="dimension" />
        <attr name="line_height" format="dimension" />
        <attr name="strike" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="custom_font" />
        <attr name="edt_txt_line_spacing" format="dimension" />
        <attr name="edt_txt_letter_spacing" format="dimension" />
        <attr name="edt_txt_line_height" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CustomButton">
        <attr name="custom_font" />
        <attr name="btn_line_spacing" format="dimension" />
        <attr name="btn_letter_spacing" format="dimension" />
        <attr name="btn_line_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MyRadioButton">
        <attr name="custom_font" />
    </declare-styleable>


    <declare-styleable name="MyCheckbox">
        <attr name="custom_font" />
    </declare-styleable>
    <attr name="custom_font">
        <enum name="avenir_heavy" value="1" />
        <enum name="avenir_light" value="2" />
        <enum name="avenir_book" value="3"/>
        <enum name="avenir_medium" value="4"/>
        <enum name="mv_boli_v1" value="5"/>

    </attr>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    // RecyclerView resources
    <declare-styleable name="CustomRecyclerView">
        <attr name="pagination" format="boolean" />
        <attr name="loadmore_visibility" format="boolean" />
        <attr name="gird_span" format="integer" />
        <attr name="list_type" />
        <attr name="list_orientation" />
        <attr name="loadmore_type" />
    </declare-styleable>

    <attr name="loadmore_type">
        <enum name="bottom" value="0" />
        <enum name="top" value="1" />
    </attr>

    <attr name="list_type">
        <enum name="list" value="0" />
        <enum name="grid" value="1" />
        <enum name="staggered" value="2" />
    </attr>

    <attr name="list_orientation">
        <enum name="vertical" value="0" />
        <enum name="horizontal" value="1" />
    </attr>
</resources>